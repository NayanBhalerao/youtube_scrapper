<h1>Scraped Videos</h1>

<style>
  table {
    border-collapse: collapse; /* Ensures that borders are collapsed into a single border */
    width: 100%; /* Optional: makes the table full width */
  }

  th, td {
    border: 1px solid black; /* Adds a 1px solid black border to each cell */
    padding: 8px; /* Optional: adds padding for better spacing */
    text-align: left; /* Optional: aligns text to the left */
  }

  th {
    background-color: #f2f2f2; /* Optional: gives a light gray background to header */
  }
</style>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>URL</th>
      <th>Description</th>
      <th>Views</th>
      <th>Likes</th>
      <th>Comments</th>
      <th>Duration</th>
      <th>Posted At</th>
      <th>Days Ago</th>
      <th>Thumbnail URL</th>
    </tr>
  </thead>
  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.title %></td>
        <td><%= video.url %></td>
        <td><%= video.description %></td>
        <td><%= video.view_count %></td>
        <td><%= video.like_count %></td>
        <td><%= video.comment_count %></td>
        <td><%= video.duration %></td>
        <td><%= video.posted_at %></td>
        <td><%= video.days_ago %></td>
        <td><%= video.thumbnail_url %></td>
      </tr>
    <% end %>
  </tbody>
</table>
